#3176
PLATFORMID=12662

PLATFORMOS=dryos

MEMBASEADDR=0x1900
ROMBASEADDR=0xffc00000
RESTARTSTART=0x63000

MAXRAMADDR=0x1FFFFFF # 32MB RAM
EXMEM_BUFFER_SIZE=0x400000 # Amount of EXMEM memory to allocate for CHDK = 4MB, on change update MEMISOSTART
EXMEM_HEAP_SKIP=0x0 # no skipping needed

ifdef OPT_CHDK_IN_EXMEM
MEMISOSTART=0x1BFFFD0  # MAXRAMADDR+1 - EXMEM_HEAP_SKIP - EXMEM_BUFFER_SIZE -32
else
MEMISOSTART=0xA5304  # original non-exmem value 
endif

PLFLAGS=-DMEMBASEADDR=$(MEMBASEADDR) -DMEMISOSTART=$(MEMISOSTART) -DMEMISOSIZE=$(MEMISOSIZE)
PLFLAGS+=-DRESTARTSTART=$(RESTARTSTART)

NEED_ENCODED_DISKBOOT=1
KEYSYS=d3enc
